---
import { SITE, PROJECTS } from "src/config";
import Breadcrumbs from "@components/Breadcrumbs.astro";
import Layout from "@layouts/Layout.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import LinkButton from "../components/LinkButton.astro";
---

<Layout title={`Projects | ${SITE.title}`}>
  <Header activeNav="projects" />
  <Breadcrumbs />
  <main id="main-content">
    <section id="about" class="mb-28 prose max-w-3xl prose-img:border-0">
      <h1 class="text-2xl sm:text-3xl tracking-wider">Projects</h1>
      <ul>
      {
        PROJECTS.map((project) => (
          <li><LinkButton href={project.href} className="link-button">{project.name}</LinkButton></li>
        ))
      }
      </ul>
    </section>
  </main>
  <Footer />
</Layout>